
    .collection-container {
        text-align: center;
        background: #000;
        width: 100vw;
        height: 100vh;
    }
    camera {
        width: 100vw;
        height: calc(100vh - 180rpx);
    }
    camera .grid-box {
        width: 100%;
        height: 100%;
    }
    camera .grid-container {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 33.3%;
        flex-wrap: wrap;
        align-content: flex-start;
        background: transparent;
    }
    camera .grid-container .grid-item {
        border-right: 0.25rpx solid #efefef;
        border-top: 0.25rpx solid #efefef;
        flex: 1;
    }
    .area {
        position: relative;
        height: 180rpx;
        width: 100%;
    }
    .take-btn {
        width:180rpx;
        height:180rpx;
        border-radius:180rpx;
        background:#fff;
        line-height:180rpx;
        margin:0 auto;
        opacity:0.7;
        color:#fff;
    }
    .chose-btn {
        position: absolute;
        right: 10rpx;
        padding: 10rpx;
        top:55rpx;
        color:#fff;
    }
    .back-btn {
        position: absolute;
        left: 10rpx;
        padding: 10rpx;
        top:55rpx;
        color:#fff;
    }
